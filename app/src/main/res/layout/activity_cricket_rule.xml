<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".CricketRuleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rules:"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginHorizontal="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:id="@+id/txtGameManagerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="8dp"
                android:gravity="left"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/txtGameManagerNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="20sp"
            >
            <Button
                android:id="@+id/btn_cricket_captian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:background="@drawable/loginbutton"
                android:textColor="#fff"

                android:text="Apply for Captian"/>
            <Button
                android:id="@+id/pdfRuelesbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbutton"
                android:layout_marginHorizontal="5dp"
                android:text=" Download Rules "
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_file_download_black_24dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="356dp"
            android:layout_height="450dp"
            android:layout_marginTop="05dp">

            <TextView
                android:id="@+id/text_cricket_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp" />

        </ScrollView>

        <Button
            android:id="@+id/btn_reg_cricket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add team member"
            android:background="@drawable/loginbutton"
            android:textColor="#fff"

            android:textSize="25dp" />

    </LinearLayout>


</LinearLayout>