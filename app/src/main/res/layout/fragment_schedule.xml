<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"


        ><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F68888"
            android:gravity="bottom">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="10dp"
            android:src="@drawable/cricket">


        </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CRICKET       Schedule"
                android:textSize="35dp"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"
                android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D57373">
    <Button
        android:id="@+id/button_Schedule_cricket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="cricket schedule"
        android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"


        ><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#72DDA9"
            android:gravity="bottom">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="10dp"
            android:src="@drawable/volleyball">


        </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VOLLEYBALL Schedule"
                android:textSize="35dp"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"
                android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3DD1AC">
    <Button
        android:id="@+id/button_Schedule_VolleyBall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="VolleyBall schedule"
        android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"


        ><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60C4F1"
            android:gravity="bottom">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="10dp"
            android:src="@drawable/kabaddi">


        </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KABADDI  Schedule"
                android:textSize="35dp"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"
                android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#709EEA">
    <Button
        android:id="@+id/button_Schedule_Kabaddi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Kabaddi schedule"
        android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>